<br>
<div class="container">
  <div class="pull-right">
    <%= link_to new_card_path, class: 'btn btn-primary btn-lg' do %>
      <i class="fa fa-plus"></i> <!-- .fa fa-plus -->
      Add New Card
    <% end %>
  </div> <!-- .pull-right -->

  <h2>Cards</h2>
  <p class="text-muted">
    Total Cards: <%= pluralize @cards.count, 'card' %>
  </p> <!-- .text-muted -->
  <hr>

  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <div class="card-container">
          <div class="row">
            <div class="col-9">
              <%= card_status card.status %>
            </div> <!-- .col-9 -->

            <div class="col-3 text-right">
              <div class="dropdown d-inline-block">
                <a href="#" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-fw fa-cog"></i> <!-- .fa fa-comments -->
                <a>

                <div class="dropdown-menu dropdown-menu-right">
                  <%= link_to edit_card_path(card), class: 'dropdown-item' do %>
                    <small>Edit Card</small>
                  <% end %>

                  <%= link_to card_path(card), class: 'dropdown-item', data: { confirm: 'Are you sure to delete?' }, method: 'delete' do %>
                    <small>Delete Card</small>
                  <% end %>
                  <!--
                  <div class="dropdown-divider"></div>
                  <h6 class="dropdown-header"><small>Change Status</small></h6>

                  <%= link_to edit_card_path(card), class: 'dropdown-item' do %>
                    <small>Draft</small>
                  <% end %>

                  <%= link_to edit_card_path(card), class: 'dropdown-item' do %>
                    <small>Printed</small>
                  <% end %>

                  <%= link_to edit_card_path(card), class: 'dropdown-item' do %>
                    <small>Approved</small>
                  <% end %>

                  <%= link_to edit_card_path(card), class: 'dropdown-item' do %>
                    <small>Modify Needed</small>
                  <% end %>

                  -->

                </div> <!-- .dropdown-menu -->
              </div> <!-- .dropdown d-inline-block -->
            </div> <!-- .col-3 -->
          </div> <!-- .row -->

          <div class="card">
            <div class="card-type-icon"><%= card_type_icon(card.card_type) %></div> <!-- .pull-right -->
            <%= card_type_icon card.card_type, 'card-image-placeholder' %>
            <div class="card-title"><%= card.title %></div> <!-- .card-title -->
            <div class="card-description"><%= card.description %></div> <!-- .card-description -->
          </div> <!-- .card -->
        </div> <!-- .card-container -->
      </div> <!-- .col-xs-12 col-sm-12 col-md-6 col-lg-4 -->
    <% end %>
  </div> <!-- .row -->
</div> <!-- .container -->
